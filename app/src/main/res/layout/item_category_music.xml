<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:background="@color/white">
    <android.support.v7.widget.CardView
        android:id="@+id/iv_item_category_novel_cover_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:gravity="center"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp">
        <ImageView
            android:id="@+id/iv_item_category_novel_cover"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitXY"/>
    </android.support.v7.widget.CardView>
    <TextView
        android:id="@+id/tv_item_category_novel_name"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/iv_item_category_novel_cover_card"
        android:text="歌单名"
        android:textColor="@color/setting_font_color"
        android:textSize="15dp"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="end"/>

</RelativeLayout>
